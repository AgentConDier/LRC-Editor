<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_parent_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lyricitem_height"
    android:layout_marginStart="@dimen/lyricitem_margin"
    android:layout_marginLeft="@dimen/lyricitem_margin"
    android:layout_marginEnd="@dimen/lyricitem_margin"
    android:layout_marginRight="@dimen/lyricitem_margin"
    android:background="@drawable/bg_list_row"
    android:orientation="horizontal"
    android:padding="@dimen/item_padding">

    <LinearLayout
        android:id="@+id/item_time_controls"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/increase_time_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:contentDescription="@string/increase_timestamp_button_hint"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@string/default_time" />

        <ImageButton
            android:id="@+id/decrease_time_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:contentDescription="@string/decrease_timestamp_button_hint"
            android:src="@drawable/ic_minus" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:paddingLeft="@dimen/item_padding"
        android:paddingRight="@dimen/item_padding"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/item_add"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/add_a_timestamp_button_hint"
        android:src="@drawable/ic_add" />

    <ImageButton
        android:id="@+id/item_play"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/play_this_lyric_item_hint"
        android:enabled="false"
        android:src="@drawable/ic_play" />

</LinearLayout>